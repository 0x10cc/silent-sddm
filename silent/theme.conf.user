# YOUR CONFIG GOES HERE!
# https://github.com/uiriansan/SilentSDDM/silent/wiki/Customizing

[General]
font = "RedHatDisplay"
enable_animations = true

[LockScreen]
display = true
background = "backgrounds/smoky.jpg"
background_blur = 0

[LockScreen.Clock]
display = true
format = "hh:mm"
font_size = 60
color = "#FFFFFF"
margin_top = #

[LockScreen.Date]
display = true
format = "dddd, MMMM dd, yyyy"
font_size = 12
color = "#FFFFFF"
margin_top = #

[LockScreen.PressAnyKey]
display = true
font_size = 9
icon_size = 18
color = "#FFFFFF"
margin_bottom = #

[LoginScreen]
background = "backgrounds/smoky.jpg"
background_blur = 50

[LoginScreen.LoginArea]
center = true
margin_top = #

[LoginScreen.LoginArea.Avatar]
selected_size = 120
standard_size = 80
standard_opacity = 0.35
shape = "circle"
border = false
border_color = "#FFFFFF"
border_size = 2
shadow = true

[LoginScreen.LoginArea.Username]
font_size = 15
color = "#FFFFFF"
margin_top = #

[LoginScreen.LoginArea.PasswordInput]
width = 200
height = 30
background_color = "#FFFFFF"
background_opacity = 0.15
text_color = "#FFFFFF"
font_size = 8
border_radius_left = #
border_radius_right = #
margin_top = #

[LoginScreen.LoginArea.LoginButton]
background_color = "#FFFFFF"
background_opacity = 0.15
hover_background_color = "#FFFFFF"
hover_background_opacity = 0.30
icon_size = 24
icon_color = "#FFFFFF"
hover_icon_color = "#FFFFFF"
border_radius_left = #
border_radius_right = #
margin_left = 5

[LoginScreen.LoginArea.Spinner]
size = 32
color = "#FFFFFF"
margin_top = #

[LoginScreen.LoginArea.WarningMessage]
font_size = 9
color = "#FFFFFF"
margin_top = #

[LoginScreen.MenuArea]
display_order = "session,keyboard,language,power"
spacing = 10
buttons_border_radius = 5

[LoginScreen.MenuArea.Session]
display = true
position = "bottom_left"
margin_x = 50
margin_y = 50
popup_direction = "up"
button_background_color = "#FFFFFF"
button_background_opacity = 0.15
button_text_color = "#FFFFFF"
button_hover_background_color = "#FFFFFF"
button_hover_background_opacity = 0.30
button_hover_text_color = "#FFFFFF"
popup_background_color = "#FFFFFF"
popup_background_opacity = 0.15
popup_text_color = "#FFFFFF"
popup_selected_background_color = "#FFFFFF"
popup_selected_background_opacity = 0.15
popup_selected_text_color = "#000"

[LoginScreen.MenuArea.Keyboard]
display = true
position = "bottom_right"
margin_x = 50
margin_y = 50
button_background_color = "#FFFFFF"
button_background_opacity = 0.15
button_icon_color = "#FFFFFF"
button_hover_background_color = "#FFFFFF"
button_hover_background_opacity = 0.30
button_hover_icon_color = "#FFFFFF"

[LoginScreen.MenuArea.Language]
display = true
position = "bottom_right"
margin_x = 50
margin_y = 50
popup_direction = "up"
button_background_color = "#FFFFFF"
button_background_opacity = 0.15
button_icon_color = "#FFFFFF"
button_hover_background_color = "#FFFFFF"
button_hover_background_opacity = 0.30
button_hover_icon_color = "#FFFFFF"
popup_background_color = "#FFFFFF"
popup_background_opacity = 0.15
popup_text_color = "#FFFFFF"
popup_selected_background_color = "#FFFFFF"
popup_selected_background_opacity = 0.15
popup_selected_text_color = "#000"

[LoginScreen.MenuArea.Power]
display = true
position = "bottom_right"
margin_x = 50
margin_y = 50
popup_direction = "up"
button_background_color = "#FFFFFF"
button_background_opacity = 0.15
button_icon_color = "#FFFFFF"
